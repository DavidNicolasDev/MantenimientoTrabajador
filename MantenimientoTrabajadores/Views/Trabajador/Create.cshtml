@using MantenimientoTrabajadores.Models.ViewModels
@model TrabajadorViewModel

<h1>Crear</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoDocumento" class="control-label"></label>
                <select asp-for="TipoDocumento" class="form-select" aria-label="Default select example">
                    <option value="DNI">DNI</option>
                    <option value="CE">Carnet de extrangeria</option>
                    <option value="LM">Libreta Militar</option>
                    <option value="Bol">Boleta Militar</option>
                </select>
                <span asp-validation-for="TipoDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroDocumento" class="control-label"></label>
                <input asp-for="NumeroDocumento" class="form-control" />
                <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sexo" class="control-label"></label>
                <div class="my-3">
                    <div class="form-check">
                        <input  asp-for="Sexo" type="radio" class="form-check-input" value="F" checked required />
                        <label class="form-check-label">F</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Sexo" type="radio" class="form-check-input" value="M" checked required />
                        <label class="form-check-label">M</label>
                    </div>
                </div>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdDepartamento" class="control-label"></label>
                <select asp-for="IdDepartamento" class="form-control" asp-items="ViewBag.Departamento"></select>
                <span asp-validation-for="IdDepartamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdProvincia" class="control-label"></label>
                <select asp-for="IdProvincia" class="form-control" asp-items="ViewBag.Provincia"></select>
                <span asp-validation-for="IdProvincia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdDistrito" class="control-label"></label>
                <select asp-for="IdDistrito" class="form-control" asp-items="ViewBag.Distrito"></select>
                <span asp-validation-for="IdDistrito" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" name="crear" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}